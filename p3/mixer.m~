function out=mixer(x,y);

nx=size(x,2);
ny=size(y,2);

if(ny>nx)
    y = resample(y, nx,ny);
    n=nx;
else
    x = resample(x,ny,nx);
    n=ny;
end

out = x + y ;

slim = [-max(out) max()];
end

% Scale the data so that the limits in
% SLIM are scaled to the range [-1 +1]
%
dx=diff(slim);
if dx==0,
    % Protect against divide-by-zero errors:
    varargin{1} = zeros(size(varargin{1}));
else
	varargin{1} = (x-slim(1))/dx*2-1;
en